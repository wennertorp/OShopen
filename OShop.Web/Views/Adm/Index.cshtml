@model IEnumerable<OShop.Logic.Shop.Product>

@{
    ViewBag.Title = "Admin - Alla artiklar";
    Layout = "~/Views/Shared/_AdmLayout.cshtml";
}

<h2>Administration - Alla artiklar</h2>

<p>
    @Html.ActionLink("Lägg till artikel", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Category
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageName)
        </td>
        <td>
            @Html.ActionLink("Redigera", "Edit", new { id = item.ProductId })
        </td>
    </tr>
}

</table>
